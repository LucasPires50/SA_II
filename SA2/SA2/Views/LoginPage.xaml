<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SA2.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Voltar"
                    Command="{Binding VoltarCommand}"
                    VerticalOptions="Start"
                    HorizontalOptions="Start"/>
            <Entry Placeholder="CPF" Keyboard="Numeric" Text="{Binding Cpf}" />
            <Entry Placeholder="Senha" Text="{Binding Senha}" IsPassword="True" Keyboard="Numeric" />
            <Button Text="Logar" Command="{Binding LogarCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>